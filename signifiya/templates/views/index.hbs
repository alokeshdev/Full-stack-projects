  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    const canvas = document.getElementById("matrix");
    const ctx = canvas.getContext("2d");
    canvas.height = window.innerHeight;
    canvas.width = window.innerWidth;

    const chars = "01";
    const fontSize = 14;
    const columns = canvas.width / fontSize;
    const drops = Array(Math.floor(columns)).fill(1);

    function drawMatrix() {
      ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
      ctx.fillRect(0, 0, canvas.width, canvas.height);
      ctx.fillStyle = "#00ff00";
      ctx.font = fontSize + "px monospace";
      drops.forEach((y, i) => {
        const text = chars[Math.floor(Math.random() * chars.length)];
        const x = i * fontSize;
        ctx.fillText(text, x, y * fontSize);
        if (y * fontSize > canvas.height && Math.random() > 0.975) drops[i] = 0;
        drops[i]++;
      });
    }

    setInterval(drawMatrix, 33);
    window.addEventListener("resize", () => location.reload());

    document.getElementById("registerBtn").addEventListener("click", () => {
      const form = document.getElementById("register");
      form.classList.toggle("active");
      form.scrollIntoView({ behavior: "smooth" });
    });

    // Event Data
    const events = [
      {
        title: "Robotic Event",
        img: "images/pic1.jpg",
        desc: "Battle it out with bots in our robotics arena! Solve real-world problems using your robotic skills."
      },
      {
        title: "Non-Tech Events",
        img: "images/pic3.jpg",
        desc: "Fun games, mystery rooms, and treasure hunts await! It’s all about brains, not just bytes."
      },
      {
        title: "Mechanical Engineering Events",
        img: "images/pic2.jpg",
        desc: "Get your gears turning with CAD battles, machine design hackathons, and more."
      },
      {
        title: "Civil Engineering Events",
        img: "images/pic4.jpg",
        desc: "From blueprint challenges to tower-building contests — this one’s for the builders!"
      },
      {
        title: "Gaming Events",
        img: "images/pic5.jpg",
        desc: "Think fast, click faster. Join esports tournaments and arcade-style mini-games."
      }
    ];

    const eventContainer = document.getElementById("eventContainer");
    const modal = document.getElementById("modal");
    const modalTitle = document.getElementById("modalTitle");
    const modalDesc = document.getElementById("modalDesc");

    function showModal(title, desc) {
      modalTitle.innerText = title;
      modalDesc.innerText = desc;
      modal.classList.add("active");
    }

    function closeModal() {
      modal.classList.remove("active");
    }

    events.forEach(event => {
      const slide = document.createElement("div");
      slide.className = "swiper-slide";
      slide.innerHTML = `
        <img src="${event.img}" />
        <div class="content">
          <h2>${event.title}</h2>
          <p>Click to know more</p>
        </div>
      `;
      slide.onclick = () => showModal(event.title, event.desc);
      eventContainer.appendChild(slide);
    });

    const swiper = new Swiper('.swiper-container', {
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      slidesPerView: 1,
      spaceBetween: 20,
      breakpoints: {
        768: { slidesPerView: 2 },
        1024: { slidesPerView: 3 }
      }
    });
     const faqItems = document.querySelectorAll('.faq-item');

  faqItems.forEach(item => {
    const question = item.querySelector('.faq-question');
    question.addEventListener('click', () => {
      item.classList.toggle('open');
    });
  });
  </script>
